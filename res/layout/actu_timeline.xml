<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#fff"
        android:minHeight="184dp" >

        <TextView
            android:id="@+id/allpseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="pseudo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#AF2B26"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/thumb_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10px" 
            android:focusable="false"
android:focusableInTouchMode="false"/>

        <TextView
            android:id="@+id/the_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="heure"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey"
            android:focusable="false"
			android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/allpseudo"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/allpseudo"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:minHeight="130dp"
            android:paddingTop="20dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/message"
            android:background="#34393E"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/count"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/com"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/add_com"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingRight="20dp"
                android:text="Ajouter"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/commentaires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:paddingLeft="60dp"
                android:text="Commentaires"
                android:textColor="#FFF"
                android:focusable="false"
android:focusableInTouchMode="false" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="110dp"
                android:text="|"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF"
                android:visibility="gone" />

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>