<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeecec"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#AF2B26" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:text="Ajouter un statut"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:background="#eeecec" >

        <ImageView
            android:id="@+id/image_profil"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:src="@android:drawable/screen_background_dark_transparent" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_gravity="center_vertical|center"
            android:capitalize="sentences"
            android:ems="10"
            android:gravity="top"
            android:hint="dites quelque chose"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:password="false"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingTop="30dp"
            android:text="- à"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:drawableRight="@drawable/youtube"
            android:text="Ajouter un lien Youtube"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="40dp"
            android:text="Caractères : "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/compteur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="80dp"
            android:text="500"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="14sp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:background="#AF2B26" >

            <Button
                android:id="@+id/valider"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:text="Valider"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/annuler"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@android:color/transparent"
                android:text="Annuler"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:text="|"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF"
                android:textSize="22sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="46dp" >

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@android:drawable/screen_background_dark_transparent"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="35dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/watch"
                android:text="   Voir la vidéo"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/titrePreview"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Null"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000"
                android:textSize="16sp"
                android:visibility="invisible" />

        </FrameLayout>

    </FrameLayout>

</LinearLayout>